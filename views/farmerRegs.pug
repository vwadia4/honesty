doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Young for Chicks - Farmer Registration Form
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  body
    .container.py-5
      h4 Farmers Registration
      form#farmerForm(action='/farmerReg', method='post')
        .mb-3
          label(for='farmerName') Farmer Name
          input#farmerName.form-control(type='text', name='farmerName', placeholder='Farmer name')

        .mb-3
          label(for='farmerGender') Gender
          select#farmerGender.form-select(name='gender')
            option(value='') Select
            option(value='Male') Male
            option(value='Female') Female

        .mb-3
          label(for='farmerDob') Date of Birth
          input#farmerDob.form-control(type='date', name='farmerDob')

        .mb-3
          label(for='contact') Contact
          input#contact.form-control(type='text', name='contact', placeholder='Contact number')

        .mb-3
          label(for='email') Email Address
          input#email.form-control(type='email', name='email', placeholder="Enter farmer's email")

        .mb-3
          label(for='farmerNin') National ID Number
          input#farmerNin.form-control(type='text', name='farmerNin', placeholder="Enter farmer's NIN number")

        h4 Recommender&apos;s Details
        .mb-3
          label(for='recommenderName') Recommender Name
          input#recommenderName.form-control(type='text', name='recommenderName', placeholder="Recommender's name")

        .mb-3
          label(for='recommenderNin') National ID Number
          input#recommenderNin.form-control(type='text', name='recommenderNin', placeholder="Enter recommender's NIN number")

        .mb-3
          button.btn.btn-primary(type='submit', onclick='addFarmer()') Add Farmer
          button#deleteFarmerBtn.btn.btn-danger(type='button') Delete
          button#editFarmerBtn.btn.btn-secondary(type='button') Edit

        ul#farmerTaskList.list-group

    script(src='./farmerRegistration.js')
    script.
      function addFarmer() {
        alert("Farmer added (placeholder).");
      }
