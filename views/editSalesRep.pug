extends layout

block content
  h2 Edit Sales Rep Details
  form(action=`/sales-reps/edit/${salesRep._id}` method="POST")
    div
      label(for="name") Name:
      input(type="text" name="name" id="name" value=salesRep.name required)
    div
      label(for="gender") Gender:
      select(name="gender" id="gender" required)
        option(value="Male" selected=salesRep.gender==="Male") Male
        option(value="Female" selected=salesRep.gender==="Female") Female
    div
      label(for="email") Email:
      input(type="email" name="email" id="email" value=salesRep.email required)
    div
      label(for="nin") National ID (NIN):
      input(type="text" name="nin" id="nin" value=salesRep.nin required)
    div
      label(for="dob") Date of Birth:
      input(type="date" name="dob" id="dob" value=salesRep.dob)
    div
      label(for="phone") Phone:
      input(type="text" name="phone" id="phone" value=salesRep.phone)
    div
      label(for="assignedRegion") Assigned Region:
      input(type="text" name="assignedRegion" id="assignedRegion" value=salesRep.assignedRegion)
    button(type="submit") Save Changes

