doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Young for Chicks - Users
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
    style.
      body {
      font-family: Arial, sans-serif;
      max-width: 400px;
      margin: auto;
      padding: 20px;
      background-color: #f1f1f1;
      background: url(/public/images/ga-con1.jpg)
      }
      input, button {
      width: 100%;
      padding: 10px;
      margin-top: 10px;
      }
  body
    // Farmer details
    .container.py-5
      h4 Welcome To SignUp Page
      form#SignUp(method='POST' action='signUp')
        .mb-3
          label(for='farmerName') Farmer Name
          input#farmerName.form-control(type='text', placeholder='Farmer name')
        .mb-3
          label(for='farmerGender') Gender
          select#gender.form-select name='gender'
            option(value='') Select
            option(value='Male') Male
            option(value='Female') Female
        .mb-3
          label(for='farmerDob') Date of Birth
          input#Dob.form-control(type='date' name='Dob')
        .mb-3
          label(for='contact number') Contact
          input#contact.form-control(type='text', name='contact', placeholder='contact number')
        .mb-3
          label(for='email')
          | Email Adress
          input#email.form-control(type='text', name='email', placeholder='email address')
        .mb-3
          label(for='password')
          | Password
          input#password.form-control(type='text', name='password', placeholder='Type password')
        .mb-3
          label(for='farmerNin') National ID Number
          input#farmerNin.form-control(type='text' name='nin' placeholder='Type NIN number')
        .mb-3
          button.btn.btn-primary(type='summit', onclick='addFarmer()') Summit Farmer
          button#deleteFarmerBtn.btn.btn-danger Delete
          button#editFarmerBtn.btn.btn-secondary Update
        div
          p Already have an account?
          button(for='login') login
