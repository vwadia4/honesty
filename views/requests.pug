doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Forms And Tables
    link(
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css',
      rel='stylesheet',
      integrity='sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr',
      crossorigin='anonymous'
    )
    style.
      div {
        height: 50px;
        width: 700px;
        background-color: powderblue;
      }
      body {
        background-image: url("/images/863f8b4de0d8e16a6addd50c265e0f0c.jpg");
        background-position: center;
      }

  body
    h2 Chicks Request Form

    form#chickenForm(method='POST', action='/request')
      .mb-3
        label(for='farmerName') Farmer name
        input#farmerName(type='text', name='farmerName')

      .mb-3
        label(for='age') Farmer age
        input#age(type='text', name='age', placeholder='18-30 years')

      .mb-3
        label(for='farmerType') Farmer Type
        select#farmerType.form-select(name='farmerType')
          option(value='') Select
          option(value='newFarmer') New Farmer
          option(value='returnFarmer') Return Farmer

      .mb-3
        label(for='quantity') Quantity
        input#quantity(type='number', name='quantity', placeholder='Enter Chick Quantity')

      .mb-3
        label(for='category') Category
        select#category.form-select(name='category')
          option(value='') Select Category
          option(value='local') Local
          option(value='exotic') Exotic

      .mb-3
        label(for='chickType') Chick Type
        select#chickType(name='chickType')
          option(value='') Select
          option(value='broiler') Broiler
          option(value='layer') Layer

      button(type='submit') Submit Request
      p#errorMsg.error

    h2 Farmers Request List

    .mb-3
      table#requestTable.table
        thead
          tr
            th(scope='col') Name
            th(scope='col') Age
            th(scope='col') Farmer Type
            th(scope='col') Quantity
            th(scope='col') Category
            th(scope='col') Chick Type
            th(scope='col') Actions
        tbody

    script(src='/requests.js')
    script(
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js',
      integrity='sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q',
      crossorigin='anonymous'
    )
