doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Young for Chicks - Feeds Order
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css', rel='stylesheet', crossorigin='anonymous')
    link(href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css', rel='stylesheet')
    style.
      :root {
        --primary-color: #28a745;
        --secondary-color: #218838;
        --light-color: #F1F8E9;
        --dark-color: #1e7e34;
      }
      body {
        background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('/images/starters.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        min-height: 100vh;
        color: white;
      }
      .form-container {
        background-color: rgba(255, 255, 255, 0.97);
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        padding: 30px;
        margin-top: 50px;
        border: 3px solid var(--primary-color);
      }
      .page-title {
        color: white;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        margin-bottom: 30px;
        font-weight: 700;
      }
      .price-display {
        background-color: #e8f5e9;
        border-left: 4px solid var(--primary-color);
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
      }
      .price-value {
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--dark-color);
      }
      .form-label {
        font-weight: 600;
        color: var(--dark-color);
      }
      .form-control {
        border: 2px solid #ddd;
        border-radius: 8px;
        padding: 12px 15px;
        transition: all 0.3s ease;
      }
      .form-control:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.25rem rgba(40, 167, 69, 0.25);
      }
      .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
        padding: 12px 30px;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
        width: 100%;
        margin-top: 10px;
      }
      .btn-primary:hover {
        background-color: var(--secondary-color);
        border-color: var(--secondary-color);
        transform: translateY(-2px);
      }
      .input-icon {
        position: relative;
      }
      .input-icon i {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: var(--primary-color);
      }

  body.container.py-5
    .row.justify-content-center
      .col-md-8.col-lg-6
        h1.text-center.page-title
          i.fas.fa-seedling.me-2
          | Feeds Order Form
        
        .form-container
          .price-display
            .d-flex.justify-content-between
              span Unit Price:
              span.price-value 50,000 UGX per bag
            small.text-muted All prices are fixed and inclusive of VAT

          form#feedsForm(method='POST' action='feeds')
            .mb-3
              label.form-label(for='farmerName') 
                i.fas.fa-user.me-2
                | Farmer Name
              input#farmerName.form-control(type='text', name='farmerName', placeholder='Enter your full name', required)

            .mb-3
              label.form-label(for='bags') 
                i.fas.fa-weight.me-2
                | Number of Bags
              .input-icon
                input#bags.form-control(type='number', name='bags', min='1', value='1', required)
                i.fas.fa-sack

            .mb-3
              label.form-label(for='totalCost') 
                i.fas.fa-calculator.me-2
                | Total Cost
              .input-icon
                input#totalCost.form-control(type='text', name='totalCost', readonly, value='50,000 UGX')
                i.fas.fa-money-bill-wave

            .mb-3
              label.form-label(for='deliveryDate') 
                i.fas.fa-calendar-day.me-2
                | Delivery Date
              input#deliveryDate.form-control(type='date', name='deliveryDate', required)

            .mb-3
              label.form-label(for='paymentMethod') 
                i.fas.fa-credit-card.me-2
                | Payment Method
              select#paymentMethod.form-control(name='paymentMethod', required)
                option(value='') Select payment method
                option(value='cash') Cash on Delivery
                option(value='mobile_money') Mobile Money
                option(value='bank_transfer') Bank Transfer

            .mb-3
              label.form-label(for='comments') 
                i.fas.fa-comment-dots.me-2
                | Special Instructions
              textarea#comments.form-control(name='comments', rows='2', placeholder='Any special delivery instructions')

            button.btn.btn-primary.btn-lg(type='submit')
              i.fas.fa-paper-plane.me-2
              | Place Order

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js', crossorigin='anonymous')
    script.
      document.addEventListener('DOMContentLoaded', function() {
        const bagsInput = document.getElementById('bags');
        const totalCostInput = document.getElementById('totalCost');
        const PRICE_PER_BAG = 50000;

        // Calculate total cost when bags quantity changes
        bagsInput.addEventListener('input', function() {
          const bags = parseInt(this.value) || 0;
          const totalCost = bags * PRICE_PER_BAG;
          totalCostInput.value = totalCost.toLocaleString() + ' UGX';
        });

        // Form submission handling
        document.getElementById('feedsForm').addEventListener('submit', function(e) {
          e.preventDefault();
          // Here you would normally send the form data to your server
          alert('Order submitted successfully! We will contact you to confirm delivery.');
          this.reset();
          bagsInput.value = 1;
          totalCostInput.value = '50,000 UGX';
        });
      });