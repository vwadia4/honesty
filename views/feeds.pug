doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Young for Chicks - Feeds
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css', rel='stylesheet', crossorigin='anonymous')
    style.
      body {
      background-image: url('/public/images/starters.jpg');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      min-height: 100vh;
      border-color: #4CAF50;
      border: 20px;
      background-image: cross-fade(50px);
      }
      div {
      height: 50px;
      width: 70%;
      border: 2px solid #4CAF50;
      font-size: larger;
      }
      .card {
      margin-top: 50px;
      background-color: rgba(255, 255, 255, 0.95);
      }
      h1 {
      align-content: center;
      }
  body.container.mt-4
    h1.mb-4 Feeds Request Form
    form#feedsForm(method='POST' action='feeds')
      .mb-3
        label.form-label(for='farmerName') Farmer Name
        input#farmerName.form-control(type='text', name='farmerName', placeholder='Enter farmer name')
      br
      .mb-3
        label.form-label(for='amountFeeds') Feeds Amount
        input#amountFeeds.form-control(type='text', name='amountFeeds', placeholder='e.g. 2 bags for 2 months')
      br
      .mb-3
        label.form-label(for='feeds cost') Feeds Cost
        input#feedCost.form-control(type='number', name='feedCost', placeholder='Enter Price for 2bags')
      br
      .mb-3
        label.form-label(for='feedDate') Date
        input#feedDate.form-control(type='date', name='feedDate')
      br
      .mb-3
        label.form-label(for='nextFeeds') Next Feeds
        input#nextFeeds.form-control(type='date', name='nextFeeds', placeholder='Next feed after 2months')
      br
      .mb-3
        label.form-label(for='comments') Comments
        input#comments.form-control(type='text', placeholder='Typr your comment')
      br
      button.btn.btn-primary(type='submit') Submit
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js', crossorigin='anonymous')
    script(src='./feed.js')