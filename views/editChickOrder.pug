extends layout

block content
  h1 Edit Chick Order
  form(action=`/chick-orders/${order._id}?_method=PUT` method="POST")
    label(for="farmerName") Farmer Name:
    input(type="text" name="farmerName" id="farmerName" value=order.farmerName required)

    label(for="quantity") Quantity:
    input(type="number" name="quantity" id="quantity" value=order.quantity required)

    label(for="unitPrice") Unit Price:
    input(type="number" name="unitPrice" id="unitPrice" step="0.01" value=order.unitPrice required)

    label(for="orderDate") Order Date:
    input(type="date" name="orderDate" id="orderDate" value=order.orderDate.toISOString().split('T')[0] required)

    label(for="status") Status:
    select(name="status" id="status")
      option(value="Pending" selected=order.status==='Pending') Pending
      option(value="Approved" selected=order.status==='Approved') Approved
      option(value="Rejected" selected=order.status==='Rejected') Rejected
      option(value="Dispatched" selected=order.status==='Dispatched') Dispatched

    button(type="submit") Update Order
